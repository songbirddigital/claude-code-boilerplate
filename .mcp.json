{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-filesystem", "/path/to/project"],
      "status": "recommended",
      "notes": "File operations - update path to your project root"
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-git"],
      "status": "recommended",
      "notes": "Git operations"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "status": "recommended",
      "notes": "GitHub API for PR workflows - set GITHUB_TOKEN env var"
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-fetch"],
      "status": "recommended",
      "notes": "Web fetching for research-first recommendations"
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-postgres"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}"
      },
      "status": "if-applicable",
      "notes": "Database access - enable if using PostgreSQL"
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-puppeteer"],
      "status": "if-applicable",
      "notes": "Browser automation for UI testing and visual verification"
    },
    "sentry": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-sentry"],
      "env": {
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}"
      },
      "status": "if-applicable",
      "notes": "Error tracking integration for production apps"
    }
  }
}
