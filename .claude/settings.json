{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "echo \"Session started: $(date '+%Y-%m-%d %H:%M')\" >> .ai/sessions/session.log"
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash:git commit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Guardian pre-commit check triggered' && exit 0"
          }
        ]
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "echo \"Session ended: $(date '+%Y-%m-%d %H:%M')\" >> .ai/sessions/session.log"
      }
    ]
  },
  "guardians": {
    "enabled": [
      "security",
      "typescript",
      "architecture",
      "test",
      "performance",
      "docs",
      "accessibility",
      "api",
      "database"
    ],
    "triggers": {
      "pre-commit": true,
      "pr-creation": true,
      "manual": true
    },
    "gates": {
      "require_zero_issues": true,
      "allow_override": true
    },
    "file_detection": {
      "*.sql": ["database"],
      "*.prisma": ["database"],
      "migrations/**": ["database"],
      "api/**": ["api", "security"],
      "routes/**": ["api"],
      "auth/**": ["security"],
      "*.ts": ["typescript"],
      "*.tsx": ["typescript", "accessibility"],
      "*.jsx": ["accessibility"],
      "*.test.*": ["test"],
      "*.spec.*": ["test"],
      "__tests__/**": ["test"],
      "*.md": ["docs"],
      "docs/**": ["docs"],
      "*.css": ["accessibility"],
      "*.scss": ["accessibility"]
    },
    "model_allocation": {
      "haiku": ["typescript", "test", "docs"],
      "sonnet": ["security", "architecture", "performance", "accessibility", "api", "database"]
    }
  },
  "external_reviewers": {
    "primary": "codex",
    "secondary": "gemini",
    "require_approval": false
  },
  "annealing": {
    "weekly_review": true,
    "auto_apply": false,
    "rollback_enabled": true
  },
  "apprentice_mode": {
    "base_enabled": true,
    "detailed_skill": "apprentice-mode"
  }
}
